{
  "compilerOptions": {
    "target": "es5",
    "module": "es2020",
    "jsx": "react-jsx",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./build",
    "skipLibCheck": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "paths": {
      "@src/*": ["src/*"],
      "@images/*": ["images/*"]
    }
  },
  "include": ["src", "src/@types/images.d.ts"]
}

